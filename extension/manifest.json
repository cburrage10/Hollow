{
  "manifest_version": 3,
  "name": "Cathedral Library",
  "version": "1.0.0",
  "description": "Capture text from Kindle Cloud Reader and any webpage to send to your Library",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://read.amazon.com/*",
    "https://*.amazon.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cathedral Library"
  },
  "content_scripts": [
    {
      "matches": ["https://read.amazon.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
